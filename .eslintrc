{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },

  "ecmaFeatures": {
    "generators": true,
    "blockBindings": true,
    "templateStrings": true,
    "arrowFunctions": true,
    "forOf": true,
  },

  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
      }
  },

  "rules": {
    "comma-dangle": 2,
    "no-underscore-dangle": 0,
    "guard-for-in": 2,
    "no-self-compare": 2,
    "no-throw-literal": 2,
    "wrap-iife": [2, "outside"],
    "no-catch-shadow": 2,
    "indent": ["error", 2],
    "consistent-this": [2, "self"],
    "func-names": 2,
    "no-inline-comments": 2,
    "max-nested-callbacks": [2, 3],
    "new-cap": 2,
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-multiple-empty-lines": 2,
    "no-nested-ternary": 2,
    "one-var": [2, "never"],
    "operator-assignment": [2, "always"],
    "quotes": [2, "single", "avoid-escape"],
    # "semi": [2, "never"],
    "spaced-comment": [1, "always"],
    "space-infix-ops": 2,
    "space-in-parens": [2, "never"],
    "space-before-function-paren": [2, "never"],
    "no-var": 2,
    "prefer-const": 1,
    "prefer-template": 1,
    "require-yield": 1,
    "arrow-spacing": 2,
    "generator-star-spacing": [2, "after"],
    "no-confusing-arrow": 2,
    "no-const-assign": 2,
  }
}
